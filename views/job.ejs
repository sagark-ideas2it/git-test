
<html>
  <head>
    <designation>Winperson</designation>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <!--STYLES-->
    <link rel="stylesheet" href="/styles/angular-toastr.css">
    <link rel="stylesheet" href="/styles/bootstrap.3.1.1.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->

    <!--Added this so the client has access to the csrf tag and it's grabbed first service side on every page -->
    <script type="text/javascript">
    window.SAILS_LOCALS = { _csrf: "<%= _csrf %>" };
    </script>

  </head>

  <body ng-app="JobpageModule" ng-controller="JobpageController" ng-cloak>
    <div class="container-fluid">

      <!-- Creates the navbar -->
        <nav class="navbar navbar-default navbar-inverse">
      
          <!-- This creates the mechanism for the collapse button -->
          <button type="button" class="navbar-toggle" data-toggle="collapse" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed">
      
            <!-- This controls the number of lines in the image when the nav collapse -->
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <!-- This is the brand on the left-hand side. -->
          <a class="navbar-brand" href="/#">Winperson</a>
          <div class="collapse navbar-collapse" ng-class="!navCollapsed && 'in'">

         
        </nav>
      </div>
    </div>

    <!-- job FORM --> 
    <form ng-submit="submitjobForm()" id="job-form" class="form-job" name="job">
      <h2 class="form-job-heading">Create an account</h2>
      <div class="row">

        <!-- N A M E -->

        <!-- checking whether the form "job" with the "name" property is both $invalid AND $dirty.  If it is
        insert the "has-error" class on the input field (i.e. insert a red border around the input field)
        -->
        <div class="control-group form-group col-md-12"
        ng-class="{'has-error':job.name.$invalid &&
                             job.name.$dirty}">
          <label>job name</label>

          <!-- For this input field make it required, and have a max length of 25 -->
          <input type="text" class="form-control" placeholder="" name="name" ng-model="jobForm.name" ng-maxlength="50" required>

          <!-- Also, if job.name.$dirty is true, show the message depending upon the particular properties truthiness (e.g. required
          and/or maxlength) -->
          <span class="help-block has-error" ng-if="job.name.$dirty">
            <span ng-show="job.name.$error.required">Name is required.</span>
            <span ng-show="job.name.$error.maxlength">The name cannot be more than 50 characters.</span>
          </span>
        </div>

        <!-- designation -->

        <div class="control-group form-group col-md-12"
          ng-class="{'has-error':job.designation.$invalid &&
                                job.designation.$dirty}">
          <label>Your designation</label>
          <input type="text" class="form-control" placeholder="" name="designation" ng-model="jobForm.designation" ng-maxlength="50" required>
          <span class="help-block has-error" ng-if="job.designation.$dirty">
            <span ng-show="job.designation.$error.required">designation is required.</span>
            <span ng-show="job.designation.$error.maxlength">The name cannot be more than 50 characters.</span>
          </span>
        </div>

        <!-- expiriance -->

        <div class="control-group form-group col-md-12"
        ng-class="{'has-error':job.expiriance.$invalid &&
                              job.expiriance.$dirty}">
          <label>Your expiriance address</label>
          <input type="expiriance" class="form-control" placeholder="" name="expiriance" ng-model="jobForm.expiriance" required >
          <span class="help-block has-error" ng-if="job.expiriance.$dirty">
            <span ng-show="job.expiriance.$error.required">expiriance address is required.</span>
            <span ng-show="job.expiriance.$error.expiriance">Not a valid expiriance address.</span>
          </span>
        </div>

          <!-- salary -->

        <div class="control-group form-group col-md-12"
          ng-class="{'has-error':job.salary.$invalid &&
                                job.salary.$dirty}">
          <label>Your salary</label>
          <input type="text" class="form-control" placeholder="" name="salary" ng-model="jobForm.salary" ng-maxlength="50" required>
          <span class="help-block has-error" ng-if="job.salary.$dirty">
            <span ng-show="job.salary.$error.required">salary is required.</span>
            <span ng-show="job.salary.$error.maxlength">The name cannot be more than 50 characters.</span>
          </span>
        </div>

       
    
       <button class="btn btn-primary btn-lg btn-block" type="submit" ng-disabled="job.$invalid">
        <span ng-show="!jobForm.loading">Create job</span>
      </button>
    </form>



    


    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/angular.1.3.js"></script>
    <script src="/js/dependencies/angular-toastr.js"></script>
    <script src="/js/dependencies/compareTo.module.js"></script>
    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/angular-route/angular-route.min.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/controllers/FilepageController.js"></script>
    <script src="/js/controllers/HomepageController.js"></script>
    <script src="/js/controllers/InvitepageController.js"></script>
    <script src="/js/controllers/JobpageController.js"></script>
    <script src="/js/controllers/QuestionpageController.js"></script>
    <script src="/js/controllers/SignupController.js"></script>
    <script src="/js/controllers/main.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
